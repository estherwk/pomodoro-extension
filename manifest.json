{
  "manifest_version": 3,
  "name": "Custom Pomodoro Timer",
  "version": "1.0",
  "description": "A customizable Pomodoro timer with sound and background options.",
  "permissions": [
    "storage",
    "notifications",
    "offscreen",
    "action"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
